<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        android:layout_marginLeft="5dp"
        >
        <View
            android:id="@+id/avatar"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:background="@drawable/chat_bubble_green_circle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="10:00 am"
            android:elevation="2dp"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/chat_bubble_others"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/chat_bubble_others"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc_message"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/chat_bubble_others"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            >
            <ImageView
                android:id="@+id/doc_message_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:padding="10dp"
                android:elevation="2dp"
                android:src="@drawable/drive_file"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/doc_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="1536220468_79_Sign-Up_URL_Structure.xlsx "
                android:textSize="14dp" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rl"
        android:layout_below="@+id/rl"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="10:00 am"
        android:textSize="10dp" />


</RelativeLayout>
